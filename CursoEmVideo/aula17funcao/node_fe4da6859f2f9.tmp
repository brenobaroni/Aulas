let x = soma = (x,y) => console.log(`A soma de ${x} + ${y} = ${x + y}`)

function fatorial(n){
    let fat = 0
    let passo = n - 1
    while(passo >= 1){
        fat *= n
        n--
    }
    return fat
}

console.log(fatorial(5))